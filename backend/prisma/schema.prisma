// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  picture   String?
  googleId  String   @unique @map("google_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  games        Game[]
  gameSessions GameSession[]

  @@map("users")
}

model Game {
  id             String   @id @default(cuid())
  name           String
  creatorEmail   String   @map("creator_email")
  challengesJson Json     @map("challenges_json")
  gridSize       Int      @default(5) @map("grid_size")
  isPublic       Boolean  @default(true) @map("is_public")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  creator      User          @relation(fields: [creatorEmail], references: [email])
  gameSessions GameSession[]

  @@map("games")
}

model GameSession {
  id           String    @id @default(cuid())
  gameId       String    @map("game_id")
  userEmail    String    @map("user_email")
  progressJson Json      @map("progress_json")
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  game Game @relation(fields: [gameId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userEmail], references: [email])

  @@unique([gameId, userEmail])
  @@map("game_sessions")
}
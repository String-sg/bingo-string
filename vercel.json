{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/play/(.*)",
            "destination": "/index.html"
        },
        {
            "source": "/((?!styles/|js/|.*\\..*).*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "maxDuration": 10
        }
    }
}